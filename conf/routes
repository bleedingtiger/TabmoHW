# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                                               controllers.HomeController.index

# Mediatheque controller
POST    /api/mediatheque/films                          controllers.mediatheque.MediathequeController.create()
GET     /api/mediatheque/films                          controllers.mediatheque.MediathequeController.list()
GET     /api/mediatheque/films?genre=:genre             controllers.mediatheque.MediathequeController.find(genre)
GET     /api/mediatheque/films/groupByYear              controllers.mediatheque.MediathequeController.group()

# Github requests controller
GET     /api/github/repos/:repoOwner/:repoName/commits  controllers.github.GithubController.getTopCommiters(repoOwner, repoName)
GET     /api/github/users/:userName/languages           controllers.github.GithubController.getTopLanguages(userName)
GET     /api/github/repos/:repoOwner/:repoName/issues   controllers.github.GithubController.getIssues(repoOwner, repoName)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
